@{
    ViewData["Title"] = "Edit | Video";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";

}
@model SaiPublicity.Models.VideoModel

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit Video</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a>Dashboard</a></li>
                    <li class="breadcrumb-item active">Edit Video</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Edit Video</h3>
                    </div>
                    <form asp-area="AdminPanel" asp-controller="Video" asp-action="EditVideo" method="post" enctype="multipart/form-data">

                        <div class="card-body">
                            <input type="hidden" asp-for="VideoId" />

                            <div class="form-group">
                                <label for="VideoName">Video Name</label>
                                <input type="text" class="form-control" asp-for="VideoName">
                            </div>

                            <div class="form-group">
                                <label for="VideoLink">Video Link</label>
                                <input type="text" class="form-control" asp-for="VideoLink">
                            </div>


                            <button type="submit" name="action" value="update" class="btn btn-outline-primary">Update</button>


                            <a asp-area="AdminPanel" asp-controller="Video" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>



