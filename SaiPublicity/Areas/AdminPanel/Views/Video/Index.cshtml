@{
	ViewData["Title"] = "Videos";
	Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}

@model IEnumerable<SaiPublicity.Models.VideoModel>

<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Videos Master</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a>Dashboard</a></li>
					<li class="breadcrumb-item active">Video</li>
				</ol>
			</div>
		</div>
	</div>
</section>

<section class="content">
	<div class="container-fluid">
		<a href="~/adminpanel/video/addvideo" class="btn btn-success mb-3">Add Video</a>
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-body">
						<table id="testimonialTable" class="table table-bordered table-hover">
							<thead>
								<tr>
									<th>#</th>

									<th>Title</th>

									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								@if (Model != null && Model.Any())
								{
									int i = 1;
									@foreach (var video in Model)
									{
										<tr>
											<td>@i</td>
											<td>@video.VideoName</td>


											<td>
												<a href="@Url.Action("EditVideo", "Video", new { area = "AdminPanel", id = video.VideoId })"
												   class="btn btn-outline-primary btn-sm">Edit</a>
												<form asp-area="AdminPanel" asp-controller="Video" asp-action="DeleteVideo" method="post"
													  onsubmit="return confirm('Are you sure you want to delete this News?');"
													  style="display:inline;">
													@Html.AntiForgeryToken()
													<input type="hidden" name="id" value="@video.VideoId" />
													<button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
												</form>
											</td>
										</tr>
										i++;
									}
								}
								else
								{
									<tr>
										<td colspan="5" class="text-center">No Data found</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
