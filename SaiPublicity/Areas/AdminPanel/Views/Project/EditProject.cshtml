@model SaiPublicity.Models.ProjectModel
@{
    ViewData["Title"] = "Edit Project";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}

<div class="container mt-4">
    <div class="card p-4">
        <h5 class="fw-bold mb-3">Edit Project</h5>
        <form asp-action="EditProject" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="ProjectId" />
            <input type="hidden" asp-for="ProjectCategoryId" />

            <div class="mb-3">
                <label>Project Name</label>
                <input asp-for="ProjectName" class="form-control" required />
            </div>

            <div class="mb-3">
                <label>Current Image</label><br />
                @if (!string.IsNullOrEmpty(Model.ProjectImage))
                {
                    <img src="~/uploads/project/@Model.ProjectImage" width="120" height="80" style="object-fit:cover;" />
                }
                else
                {
                    <span>No Image</span>
                }
            </div>

            <div class="mb-3">
                <label>Upload New Image</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success">Update Project</button>
            <a asp-action="List" asp-route-id="@Model.ProjectCategoryId" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
