@{
	ViewData["Title"] = "Testimonials";
	Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}
@model IEnumerable<SaiPublicity.Models.TestimonialModel>


<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Testimonial Master</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a>Dashboard</a></li>
					<li class="breadcrumb-item active">Testimonial</li>
				</ol>
			</div>
		</div>
	</div>
</section>

<section class="content">
	<div class="container-fluid">
		<a href="~/adminpanel/testimonial/addtestim" class="btn btn-success mb-3">Add Testimonial</a>
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-body">
						<table id="testimonialTable" class="table table-bordered table-hover">
							<thead>
								<tr>
									<th>#</th>
									<th>Name</th>
									<th>Image</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								@if (Model != null && Model.Any())
								{
									int i = 1;
									@foreach (var testim in Model)
									{
										<tr>
											<td>@i</td>
											<td>@testim.TestName</td>
											<td>
												@if (!string.IsNullOrEmpty(testim.TestimProfile))
												{
													<img src="~/uploads/testimonials/@testim.TestimProfile" width="50" height="50" />
												}
												else
												{
													<span>No Image</span>
												}
											</td>
											<td>
												<a href="@Url.Action("EditTestim", "Testimonial", new { area = "AdminPanel", id = testim.TestId })"
												   class="btn btn-outline-primary btn-sm">Edit</a>
												<form asp-area="AdminPanel" asp-controller="Testimonial" asp-action="DeleteTestim" method="post"
													  onsubmit="return confirm('Are you sure you want to delete this Testimonial?');"
													  style="display:inline;">
													@Html.AntiForgeryToken()
													<input type="hidden" name="id" value="@testim.TestId" />
													<button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
												</form>
											</td>
										</tr>
										i++;
									}
								}
								else
								{
									<tr>
										<td colspan="4" class="text-center">No Tesimonials found</td>
									</tr>
								}

							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
