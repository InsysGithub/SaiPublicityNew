@{
    ViewData["Title"] = "Edit | Testimonials";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";

}
@model SaiPublicity.Models.TestimonialModel

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit Testimonial</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a>Dashboard</a></li>
                    <li class="breadcrumb-item active">Edit Testimonial</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Edit Testimonial</h3>
                    </div>
                    <form asp-area="AdminPanel" asp-controller="Testimonial" asp-action="EditTestim" method="post" enctype="multipart/form-data">

                        <div class="card-body">
                            <input type="hidden" asp-for="TestId" />

                            <div class="form-group">
                                <label for="TestName">Name</label>
                                <input type="text" class="form-control" asp-for="TestName">
                            </div>

                            <div class="form-group">
                                <label for="TestLocation">Location</label>
                                <input type="text" class="form-control" asp-for="TestLocation">
                            </div>

                            <div class="form-group">
                                <label for="TestDate" hidden>Date</label>
                                <input asp-for="TestDate" type="date" class="form-control" hidden/>
                            </div>

                            <div class="form-group">
                                <label for="TestDesc">Description</label>
                                <textarea class="form-control" placeholder="Enter Description" asp-for="TestDesc" rows="4"></textarea>
                                <span asp-validation-for="TestDesc" class="text-danger"></span>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.TestimProfile))
                            {
                                <div class="form-group">
                                    <label>Current Photo:</label><br />

                                    <div style="position: relative; display: inline-block;">
                                        <img src="~/uploads/testimonials/@Model.TestimProfile" alt="Testimonial Image" width="100" id="currentImage" style="display: block;" />

                                        @* <button type="button"
                                                class="btn btn-danger btn-sm"
                                                style="position: absolute; top: -8px; right: -8px; border-radius: 50%; padding: 4px 6px;"
                                                onclick="removeImage()">
                                            <i class="fas fa-times"></i>
                                        </button> *@
                                        <div class="form-check mt-2 text-danger">
                                            <input type="checkbox" class="form-check-input" id="RemoveImage" name="RemoveImage" value="true" @(Model.RemoveImage ? "checked" : "") />
                                            <label class="form-check-label" for="RemoveImage">Remove current image</label>
                                        </div>
                                    </div>

                                    <input type="hidden" name="RemoveImage" id="RemoveImage" value="false" />
                                </div>
                            }



                            <div class="form-group">
                                <label for="file">Upload New Photo (Optional)</label>
                                <input type="file" asp-for="ImageFile" class="form-control" accept="image/*" />
                            </div>
                            <button type="submit" name="action" value="update" class="btn btn-outline-primary">Update</button>


                            <a asp-area="AdminPanel" asp-controller="Testimonial" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

