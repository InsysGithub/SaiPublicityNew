@{
    ViewData["Title"] = "Contact Us";
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}
@model SaiPublicity.Models.ContactModel 

<section class="breadcrumb-section py-5">
    <div class="container">
        <h2 class="montserrat-SemiBold  mb-3">Contact</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-dark">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Contact</li>
            </ol>
        </nav>
    </div>
</section>

<section class="py-5 bg-contact-page">
    <div class="container">
        <div class="row justify-content-center">
            <div id="contactPage" class="col-lg-10 p-4 p-lg-5 contact-box shadow-sm">

                <div class="row g-4">
                    <div class="col-lg-4 position-relative" data-aos="fade-right">
                        <div class="contact-info-box">
                            <h3 class="montserrat-regular mb-5">Contact Us</h3>

                            <div class="d-flex align-items-center mb-4">
                                <i class="fas fa-phone-alt me-3 themeSecondary-bg text-white p-2 rounded-circle"></i>
                               <div>
                                    <span>+966 545314481<span class="font-xs">(Saudi)</span></span><br />
                                    <span>+966 561880515<span class="font-xs">(Saudi)</span></span><br />
                                    <span>+973 39610953 <span class="font-xs">(Bahrain)</span></span>
                                </div>
                            </div>

                            <div class="d-flex align-items-start mb-4">
                                <i class="fas fa-envelope me-3 themeSecondary-bg text-white p-2 rounded-circle"></i>
                                <div class="mails">
                                    <span>sales@saigcc.com</span><br>
                                    @* <span>sales.saiadvertising@gmail.com</span> *@
                                </div>
                            </div>

                            <div class="d-flex align-items-start mb-4">
                                <i class="fas fa-map-marker-alt me-3 themeSecondary-bg text-white p-2 rounded-circle"></i>
                                <span> AL Khobar AI Khuzama Dist. King Khalid.</span>
                            </div>

                            <div class="d-flex align-items-start mb-4">
                                <i class="fas fa-map-marker-alt me-3 themeSecondary-bg text-white p-2 rounded-circle"></i>
                                <span>Flat/Shop No. 0, Building 67, Road 402,<br>Al Qaryah, Block 604, Bahrain.</span>
                            </div>
                        </div>
                    </div>


                    <div class="col-lg-8">
                        <div class="contact-form">
                            <h3 class="montserrat-regular mb-4">Get in Touch</h3>

                            <form asp-controller="Contact" asp-action="Index"
                                  method="post" enctype="multipart/form-data"
                                  id="contactForm">
                                @Html.AntiForgeryToken()
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <input asp-for="FullName" class="form-control rounded-3" placeholder="Full Name" required>
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <input asp-for="Email" class="form-control rounded-3" placeholder="Email Address" required>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <input asp-for="PhoneNo"
                                               class="form-control rounded-3"
                                               placeholder="Mobile Number"                                             
                                               inputmode="numeric"
                                               oninput="this.value = this.value.replace(/[^0-9]/g, '')"
                                               required>
                                        <span asp-validation-for="PhoneNo" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <input asp-for="Subject" class="form-control rounded-3" placeholder="Subject" >
                                        <span asp-validation-for="Subject" class="text-danger"></span>
                                    </div>
                                    <div class="col-12">
                                        <textarea asp-for="Message" class="form-control rounded-3" rows="4" placeholder="Your Message" required></textarea>
                                        <span asp-validation-for="Message" class="text-danger"></span>
                                    </div>
                                    <div class="col-12">
                                        <input type="hidden" asp-for="RecaptchaToken" />
                                        <div class="g-recaptcha" data-sitekey="6LdYQTMsAAAAADh2E3NBovEQC5GyheHVXXVO-Tlb"></div>
                                        <span asp-validation-for="RecaptchaToken" class="text-danger"></span>
                                    </div>
                                    <div class="col-12">
                                        <button type="submit" id="submitBtn" class="btn btn-light rounded-3 px-4 py-2">
                                            Submit
                                        </button>

                                        @if (!string.IsNullOrEmpty(successMessage))
                                        {
                                            <p class="text-success mt-2">@successMessage</p>
                                        }
                                        @if (!string.IsNullOrEmpty(errorMessage))
                                        {
                                            <p class="text-danger mt-2">@errorMessage</p>
                                        }
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            var form = document.getElementById("contactForm");
            var submitBtn = document.getElementById("submitBtn");

            if (form && submitBtn) {
                form.addEventListener("submit", function () {

                    submitBtn.innerHTML = "Submitting...";
                    submitBtn.disabled = true;
                });
            }
        });
    </script>
}
