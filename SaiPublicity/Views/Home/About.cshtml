@{
    ViewData["Title"] = "About Us";
}

<section class="breadcrumb-section py-5">
    <div class="container">
        <h2 class="montserrat-SemiBold  mb-3">Company Profile</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-dark">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Company Profile</li>
            </ol>
        </nav>
    </div>
</section>

<section class="py-5 ">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-md-6" data-aos="fade-right">
                <img src="~/images/about-page.png" alt="About Sai Publicity" class="img-fluid" />
            </div>
            <div class="col-md-6" data-aos="fade-left">
                <h2 class="montserrat-SemiBold mb-3">About Sai Publicity & Advertising</h2>
                <p class="text-secondary">
                    Established with a vision to bridge creativity and communication, <strong>Sai Publicity & Advertising</strong> has been crafting
                    powerful brand stories that inspire, engage, and connect. From print to digital, outdoor to strategic campaigns,
                    our focus is on delivering ideas that make a lasting impact.
                </p>
                <p class="text-secondary mb-4">
                    Our team of experts combines innovation, design, and marketing strategy to bring brands to life through
                    purposeful storytelling and consistent results.
                </p>
                <p class="text-secondary">
                    Sai Publicity and Advertising Company is dedicated to providing honest, result-oriented advertising solutions. We focus on understanding each client’s needs quickly and accurately, offering transparent quotations, reasonable pricing, and the best possible quality. With our fast response times and quick delivery, we aim to make advertising simple, effective, and trustworthy for every business we work with.
                </p>
            </div>
        </div>
    </div>
</section>

<section class="py-5 pt-0 pt-md-5">
    <div class="container ">
        <h2 class="montserrat-SemiBold mb-4 " data-aos="fade-right">Our Vision & Mission</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="p-4  h-100">
                    <h4 class="montserrat mb-3 themePrimary">Our Vision</h4>
                    <p class="text-secondary">
                        To be a leading creative agency that transforms ideas into impactful brand experiences and inspires growth
                        through innovation and trust.
                    </p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="p-4 h-100 ">
                    <h4 class="montserrat mb-3 themePrimary">Our Mission</h4>
                    <p class="text-secondary">
                        To deliver excellence in every campaign by combining strategy, creativity, and technology — ensuring
                        every message connects with its audience.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
 
<section class="core-values-section py-5 position-relative">
    <div class="container">
        <h2 class="montserrat-SemiBold mb-5 " data-aos="fade-right">Our Core Values</h2>

        <div class="row g-4 justify-content-center text-center">
           
            <div class="col-md-4 col-lg-2 col-6" data-aos="zoom-in">
                <div class="value-card">
                    <div class="icon-circle">
                        <img src="~/images/icons/creativity.png" alt="Creativity" />
                    </div>
                    <h6 class="mt-3 mb-0">Creativity</h6>
                </div>
            </div>

            <div class="col-md-4 col-lg-2 col-6" data-aos="zoom-in" data-aos-delay="100">
                <div class="value-card">
                    <div class="icon-circle">
                        <img src="~/images/icons/honesty.png" alt="Integrity" />
                    </div>
                    <h6 class="mt-3 mb-0">Integrity</h6>
                </div>
            </div>

            <div class="col-md-4 col-lg-2 col-6" data-aos="zoom-in" data-aos-delay="200">
                <div class="value-card">
                    <div class="icon-circle">
                        <img src="~/images/icons/customer-retention.png" alt="Commitment" />
                    </div>
                    <h6 class="mt-3 mb-0">Commitment</h6>
                </div>
            </div>

            <div class="col-md-4 col-lg-2 col-6" data-aos="zoom-in" data-aos-delay="300">
                <div class="value-card">
                    <div class="icon-circle">
                        <img src="~/images/icons/project-management.png" alt="Innovation" />
                    </div>
                    <h6 class="mt-3 mb-0">Innovation</h6>
                </div>
            </div>

            <div class="col-md-4 col-lg-2 col-6" data-aos="zoom-in" data-aos-delay="400">
                <div class="value-card">
                    <div class="icon-circle">
                        <img src="~/images/icons/united.png" alt="Teamwork" />
                    </div>
                    <h6 class="mt-3 mb-0">Teamwork</h6>
                </div>
            </div>

            <div class="col-md-4 col-lg-2 col-6" data-aos="zoom-in" data-aos-delay="500">
                <div class="value-card">
                    <div class="icon-circle">
                        <img src="~/images/icons/operation.png" alt="Excellence" />
                    </div>
                    <h6 class="mt-3 mb-0">Excellence</h6>
                </div>
            </div>
        </div>
    </div>
</section>

